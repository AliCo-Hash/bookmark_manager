<ul>
  <% @bookmarks.each do |bookmark| %>
   <li>
    <a href="<%= bookmark.url %>">
      <%= bookmark.title %>
    </a>
   </li>
  <% end %>
</ul> 

<form action="/add_bookmark" method="POST">
<input type="text" name="url" placeholder="URL" />
<input type="text" name="title" placeholder="Title" />
<input type="submit" value="Add New Bookmark" />
</form>

