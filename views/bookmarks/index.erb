<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
      <a href="<%= bookmark.url %>" target="_blank">
        <%= bookmark.title %>
      </a>
      <form action="/bookmarks/<%= bookmark.id %>" method="post">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete bookmark" />
      </form>
      <form action="/bookmarks/<%= bookmark.id %>/update" method="get">
        <input type="submit" value="Update bookmark" />
      </form>
    </li>
  <% end %>
</ul> 

<form action="/add_bookmark" method="POST">
  <input type="text" name="title" placeholder="Title" />
  <input type="text" name="url" placeholder="URL" />
  <input type="submit" value="Add New Bookmark" />
</form>